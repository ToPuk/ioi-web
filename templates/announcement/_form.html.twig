{{ form_start(form) }}
<div class="form-group">
    <label>Гарчиг:</label>
    {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder': 'Мэдэгдлийн гарчиг'} }) }}
</div>
<div class="form-group">
    <label>Тайлбар:</label>
    {{ form_widget(form.shortDescription, { 'attr': {'class': 'form-control'} }) }}
</div>

<div class="form-group">
    <label>Агуулга:</label>
    {{ form_widget(form.bodyHtml, { 'attr': {'class': 'form-control', 'name':'editor-full'} }) }}
</div>

<div class="form-group">
    <label>Нийтлэх огноо:</label>
    <div class="input-group">
										<span class="input-group-prepend">
											<span class="input-group-text"><i class="icon-calendar22"></i></span>
										</span>
        {{ form_widget(form.releaseDate, { 'attr': {'class': 'form-control daterange-single'} }) }}
    </div>
</div>

<button type="submit" class="btn btn-primary">Хадгалах <i class="icon-paperplane ml-2"></i></button>
{{ form_end(form) }}
